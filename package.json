{
  "name": "reviews-responder",
  "version": "1.0.0",
  "description": "Telegram bot for fetching and responding to App Store and Play Store reviews",
  "main": "dist/bot.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/bot.js",
    "dev": "tsx watch src/bot.ts",
    "typecheck": "tsc --noEmit",
    "prepare-migrations": "node scripts/prepare-migrations.mjs"
  },
  "keywords": [
    "telegram",
    "bot",
    "app-store",
    "play-store",
    "reviews"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.47.0",
    "dotenv": "^17.2.3",
    "googleapis": "^144.0.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "openai": "^4.73.0",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.0",
    "@types/node-cron": "^3.0.11",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
